@model EgeApp.Frontend.Mvc.Models.Identity.ForgotPasswordViewModel

<section class="forgot-password spad">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8">
                <div class="forgot-password__form">
                    <form method="post" asp-action="ForgotPassword" asp-controller="Account">
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input asp-for="Email" type="email" class="form-control" id="email"
                                placeholder="Email adresinizi giriniz" required />
                            <span class="text-danger" asp-validation-for="Email"></span>
                        </div>

                        <button type="submit" class="btn btn-danger btn-hover btn-lg mt-3">Gönder</button>
                    </form>


                    <p class="mt-4 text-center text-muted" style="font-size: 14px;">
                        Sistemde kayıtlı email adresinize şifre sıfırlama talimatları gönderilecektir.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    
    .btn-danger {
        background-color: #b40618;
        color: white;
        border: none;
        padding: 15px 20px;
     
        font-size: 18px;
   
        transition: background-color 0.3s ease, transform 0.3s ease;
        display: block;
    
        width: 100%;
       
        text-align: center;
        cursor: pointer;
    }

    .btn-danger:hover {
        background-color: #9f0c1b;
        transform: translateY(-2px);
    }

  
    .btn-secondary {
        background-color: #6c757d;
        color: white;
        padding: 15px 20px;

        font-size: 18px;
  
        transition: background-color 0.3s ease, transform 0.3s ease;
        border: none;
        display: block;
     
        width: 100%;
  
        text-align: center;
    }

    .btn-secondary:hover {
        background-color: #343a40;
        transform: translateY(-2px);
    }

  
    .forgot-password__form {
        background-color: #f8f9fa;
        padding: 40px;
        border-radius: 8px;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }


    .text-muted {
        font-size: 14px;
        color: #6c757d;
    }


    .form-group {
        margin-bottom: 20px;
    }


    .mt-4 {
        margin-top: 1.5rem;
    }


    .d-grid {
        display: grid;
        gap: 10px;
    }
</style>
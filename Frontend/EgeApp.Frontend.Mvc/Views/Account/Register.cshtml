@model EgeApp.Frontend.Mvc.Models.Identity.RegisterViewModel

<section class="register spad">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10">
                <div class="register__form bg-light p-5 rounded shadow">
                    <div class="mb-4">
                        <h3 class="text-left">Üye Ol</h3>
                        <hr style="border: 1px solid #d1d1d6;">
                    </div>
                    <form method="post" asp-action="Register" asp-controller="Account">
                        @Html.AntiForgeryToken()
                        <div class="form-group mb-4">
                            <label for="firstName">Ad</label>
                            <input asp-for="FirstName" class="form-control form-control-lg" id="firstName"
                                placeholder="Ad" required />
                            <span class="text-danger" asp-validation-for="FirstName"></span>
                        </div>
                        <div class="form-group mb-4">
                            <label for="lastName">Soyad</label>
                            <input asp-for="LastName" class="form-control form-control-lg" id="lastName"
                                placeholder="Soyad" required />
                            <span class="text-danger" asp-validation-for="LastName"></span>
                        </div>
                        <div class="form-group mb-4">
                            <label for="email">Email</label>
                            <input asp-for="Email" class="form-control form-control-lg" id="email" placeholder="Email"
                                required />
                            <span class="text-danger" asp-validation-for="Email"></span>
                        </div>
                        <div class="form-group mb-4">
                            <label for="username">Kullanıcı Adı</label>
                            <input asp-for="UserName" class="form-control form-control-lg" id="username"
                                placeholder="Kullanıcı Adı" required />
                            <span class="text-danger" asp-validation-for="UserName"></span>
                        </div>
                        <div class="form-group mb-4">
                            <label for="phoneNumber">Telefon Numarası</label>
                            <input asp-for="PhoneNumber" class="form-control form-control-lg" id="phoneNumber"
                                placeholder="Telefon Numarası" required />
                            <span class="text-danger" asp-validation-for="PhoneNumber"></span>
                        </div>
                        <div class="form-group mb-4">
                            <label for="password">Parola</label>
                            <input asp-for="Password" type="password" class="form-control form-control-lg" id="password"
                                placeholder="Parola" required />
                            <span class="text-danger" asp-validation-for="Password"></span>
                        </div>
                        <div class="form-group mb-4">
                            <label for="rePassword">Parola Tekrar</label>
                            <input asp-for="RePassword" type="password" class="form-control form-control-lg"
                                id="rePassword" placeholder="Parola Tekrar" required />
                            <span class="text-danger" asp-validation-for="RePassword"></span>
                        </div>
                        <button type="submit" class="btn btn-primary btn-hover btn-lg mt-3 w-100">Kayıt Ol</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
   
    .btn-primary {
        background-color: #002147;
        color: white;
        border: none;
        padding: 15px 20px;
        font-size: 20px;
        transition: background-color 0.3s ease, transform 0.3s ease;
        width: 100%;
        text-align: center;
        cursor: pointer;
    }

    .btn-primary:hover {
        background-color: #00132b;
        transform: translateY(-2px);
    }


    .register__form {
        background-color: #f8f9fa;
        padding: 60px;
        border-radius: 10px;
        box-shadow: 0px 6px 10px rgba(0, 0, 0, 0.1);
    }

  
    .form-group {
        margin-bottom: 30px;
    }


    .form-control {
        border: 1px solid #d1d1d6;
        border-radius: 6px;
        padding: 20px 20px;
        font-size: 18px;
    }

    .form-control:focus {
        border-color: #002147;
        outline: none;
        box-shadow: 0px 0px 6px rgba(0, 33, 71, 0.4);
    }

    .register__form h3 {
        font-size: 28px;
        color: #002147;
    }

    .register__form hr {
        border: 1px solid #d1d1d6;
    }

 
    .mt-3 {
        margin-top: 1rem;
    }

    .mb-4 {
        margin-bottom: 1.5rem;
    }
</style>
@model EgeApp.Frontend.Mvc.Models.Identity.ResetPasswordViewModel

<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8 col-sm-10">
                <div class="bg-light p-5 rounded shadow">
                    <h1 class="text-center mb-4">Şifre Sıfırla</h1>
                    <form asp-area="" asp-controller="Account" asp-action="ResetPassword" method="post">
                        <input type="hidden" asp-for="UserId" />
                        <input type="hidden" asp-for="TokenCode" />

                        <div asp-validation-summary="All" class="alert alert-danger mb-4" role="alert"></div>

                
                        <div class="form-group mb-4">
                            <label asp-for="Password" class="form-label">Yeni Şifre</label>
                            <input asp-for="Password" type="password" class="form-control border-0 py-3 px-3 rounded"
                                placeholder="Yeni parolanızı giriniz">
                            <span class="text-danger" asp-validation-for="Password"></span>
                        </div>

                      
                        <div class="form-group mb-4">
                            <label asp-for="RePassword" class="form-label">Şifre Tekrar</label>
                            <input asp-for="RePassword" type="password" class="form-control border-0 py-3 px-3 rounded"
                                placeholder="Yeni parolanızı tekrar giriniz">
                            <span class="text-danger" asp-validation-for="RePassword"></span>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 py-3">Şifremi Sıfırla</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@model List<EgeApp.Frontend.Mvc.Models.Other.GetHomesViewModel>

<div class="container py-5">
    <h2 class="text-center mb-4">Anasayfa Ürünleri</h2>
    <div class="row">
        @if (Model != null && Model.Any())
        {
            foreach (var product in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card shadow-sm border-0">
                        <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name"
                            style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text">@product.Description</p>
                            <h6 class="text-primary">@product.Price.ToString("C")</h6>
                            @if (product.DiscountedPrice.HasValue)
                            {
                                <h6 class="text-danger">İndirimli: @product.DiscountedPrice.Value.ToString("C")</h6>
                            }
                            <p><small>Kategori: @product.Category.Name</small></p>
                            <a href="@product.Url" class="btn btn-outline-primary btn-sm">Düzenle</a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center">
                <p class="text-muted">Anasayfa için ürün bulunamadı.</p>
            </div>
        }
    </div>
</div>